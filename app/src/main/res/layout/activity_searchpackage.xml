<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/search_package2"
    android:layout_height="match_parent"
    tools:context=".searchpackage">

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="63dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:textColor="@color/black"
        android:layout_marginStart="60dp"
        android:text="Enter your destination"/>

    <EditText
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Penang"
        android:background="@drawable/dropdowndes"
        android:overlapAnchor="false"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:textColor="@color/black"
        android:layout_marginStart="60dp"
        android:text="Enter your date duration"/>

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="18/09/2020 - 20/02/2021"
        android:background="@drawable/dropdowndes"
        android:overlapAnchor="false"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:textColor="@color/black"
        android:layout_marginStart="60dp"
        android:text="State the amount of guest"/>

    <EditText
        android:id="@+id/guest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="610dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="2"
        android:background="@drawable/dropdowndes"
        android:overlapAnchor="false"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button1"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Search"
        android:textColor="@color/white"
        android:layout_marginTop="750dp"
        />


</RelativeLayout>